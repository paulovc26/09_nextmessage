// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Usuario {
  id    String @id @default(cuid())
  email String @unique
  nome  String
  senha String

  Gastos   Gastos[]
  Receitas Receitas[]
}

model Gastos {
  id        String   @id @default(cuid())
  descricao String
  valor     Float
  data      DateTime
  tipo      String
  usuarioId String
  usuario   Usuario  @relation(fields: [usuarioId], references: [id])
}

model Receitas {
  id        String   @id @default(cuid())
  descricao String
  valor     Float
  data      DateTime
  tipo      String
  usuarioId String
  usuario   Usuario  @relation(fields: [usuarioId], references: [id])
}
